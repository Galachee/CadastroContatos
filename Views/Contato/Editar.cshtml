@model ContatoModel
@{
    ViewData["Title"] = "Editar Contato";
}
<div class="text-center">

    <h1 class="display-4">Editar Contato</h1>

</div>

<form asp-controller="Contato" asp-action="Alterar" method="post">
    
    <input type="hidden" asp-for="Id"/>

    <div class="mb-3">
        <label for="nome">Nome</label>
        <input type="text" asp-for="Nome" class="form-control" placeholder="Digite o novo nome do contato">
        @Html.ValidationMessageFor(x => x.Nome)
    </div>



    <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input type="email" asp-for="Email" class="form-control" placeholder="E-mail do contato">
        @Html.ValidationMessageFor(x => x.Email)
    </div>

    <div class="mb-3">

        <label for="celular">Celular</label>
        <input type="text" asp-for="Celular" class="form-control" placeholder="Digite o novo número do contato">
        @Html.ValidationMessageFor(x => x.Celular)
    </div>

    <div class="d-grid gap-2 col-12">

    <button type="submit" class="btn btn-success col-12" role="button">EDITAR</button>

    <a class="btn btn-secondary col-12" asp-controller="Contato" asp-action="index">Voltar</a>

    </div>
</form>

